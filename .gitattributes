# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.ts text eol=lf
*.js text eol=lf
*.json text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary

# Lock files (generated)
package-lock.json linguist-generated=true
yarn.lock linguist-generated=true
pnpm-lock.yaml linguist-generated=true

# Build output (generated)
/build/** linguist-generated=true
/dist/** linguist-generated=true

# Exclude test files from language statistics
tests/** linguist-documentation
test-files/** linguist-documentation
*.test.ts linguist-documentation
*.test.js linguist-documentation
*.spec.ts linguist-documentation
*.spec.js linguist-documentation
